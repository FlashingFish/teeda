<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <groupId>org.seasar.teeda</groupId>
    <artifactId>teeda-project</artifactId>
    <version>1.0.3-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>teeda-reporting</artifactId>
  <packaging>pom</packaging>
  <name>Teeda Reporting</name>
  <description></description>
  <url>http://teeda.seasar.org/</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-cobertura-report</id>
            <phase>package</phase>
            <configuration>
              <tasks>
                <ant
                  antfile="build.xml"
                  target="cobertura-report"
                  inheritRefs="true"
                >
                  <property name="project.reporting.outputDirectory" value="${project.reporting.outputDirectory}"/>
                </ant>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>cobertura</groupId>
      <artifactId>cobertura</artifactId>
      <version>1.7</version>
      <type>jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <reporting>
  </reporting>
</project>
